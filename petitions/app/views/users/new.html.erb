<!DOCTYPE html>
<html>
<head>
  <title>Онлайн петиции нашего района</title>
</head>
<body>

<div class="container">
  <div class="header">
    <div id="title">Онлайн петиции нашего района</div>
    <div id="login">
      <% if current_user %>
        <%= current_user.email %> | <%= link_to "(Выйти)", '/logout' %>
      <% else %>
        <%= link_to 'Зарегистрироваться', '/signup' %> | <%= link_to 'Войти', '/login' %>
      <% end %>

      <%= yield %>
    </div>
  </div>
  <div class="content">
    <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
    <% end %>

    <h3>Регистрация</h3>

    <%= form_for :user, url: '/users' do |f| %>
      <% if @user.errors.any? %>
      Form is invalid
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
          <% end %>

      </ul>
      Email: <br>
      <%= f.text_field :email %><br>
      Имя: <br>
      <%= f.text_field :first_name %><br>
      Фамилия: <br>
      <%= f.text_field :last_name %><br>
      Пароль: <br>
      <%= f.password_field :password %><br>
      Подтверждение пароля: <br>
      <%= f.password_field :password_confirmation %><br>
      <br>
      <%= f.submit "Зарегистрироваться" %>

    <% end %>
  </div>
  <div class="sidebar">
   <ul>
     <li><%= link_to 'Все петиции', '/?all=true' %></li>
     <li><%= link_to 'Создать петицию', new_petition_path %></li>
     <% if current_user %>
     <li><%= link_to 'Мои петиции', '/?my=true' %>
              <% end %>
     </li>
  </ul>
  </div>
</div>
</body>
</html>
