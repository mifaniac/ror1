<h3>Регистрация</h3>

<%= form_for :user, url: '/users' do |f| %>

<div class="input-group">
  <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
</div>
<br>
<div class="input-group">
  <%= f.text_field :first_name, class: "form-control", placeholder: "Ваше имя" %>
</div>
<br>
<div class="input-group">
  <%= f.text_field :last_name, class: "form-control", placeholder: "Ваша фамилия" %>
</div>
<br>
<div class="input-group">
  <%= f.text_field :password, class: "form-control", placeholder: "Пароль", type: "password" %>
</div>
<br>
<div class="input-group">
  <%= f.text_field :password_confirmation, class: "form-control", placeholder: "Подтверждение пароля", type: "password" %>
</div>
<br>
  <%= f.submit "Зарегистрироваться", class: "btn btn-success" %>
<% end %>

