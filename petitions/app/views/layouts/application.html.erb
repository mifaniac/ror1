<!DOCTYPE html>
<html>
<head>
  <title>Petitions</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
  <div class="header">
    <div id="title">Онлайн петиции нашего района</div>
    <div id="login">
      <% if current_user %>
        <%= current_user.email %> | <%= link_to "(Выйти)", '/logout' %>
      <% else %>
        <%= link_to 'Зарегистрироваться', '/signup' %> | <%= link_to 'Войти', '/login' %>
      <% end %>
    </div>
  </div>
  <div class="content">
    <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
    <% end %>

    <%= yield %>
   </div>
    
  <div class="sidebar">
   <ul>
     <li><%= link_to 'Все петиции', '/?all=true' %></li>
     <li><%= link_to 'Создать петицию', new_petition_path %></li>
     <% if current_user %>
     <li><%= link_to 'Мои петиции', '/?my=true' %>
              <% end %>
     </li>
  </ul>
  </div>


</body>
</html>
